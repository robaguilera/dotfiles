export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Path
ZSH=$HOME/.oh-my-zsh

# Set Spaceship ZSH as a prompt
autoload -U promptinit; promptinit
prompt pure

# Syntax highlighting
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# My Customizations
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh && source ./.fzfLove


# Add `~/bin` to the `$PATH`
export PATH="$HOME/bin:/opt/aplos/bin:$PATH"

# Load the following dotfiles
# * ~/.path can be used to extend `$PATH`
# * ~/.extra can be used to extend anything that doesn't fit in any other file
for file in ~/dotfiles/.{path,aliases,exports,functions}; do
  [ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;
